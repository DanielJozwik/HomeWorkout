<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MealsActivity"
    android:background="@drawable/background_outlogo">

    <ListView
        android:id="@+id/productsList"
        android:layout_width="268dp"
        android:layout_height="222dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="63dp" />

    <TextView
        android:layout_width="177dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="413dp"
        android:layout_marginEnd="138dp"
        android:text="Liczba spożytych kalori:"
        android:textColor="#000000"></TextView>

    <TextView
        android:layout_width="191dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="448dp"
        android:layout_marginEnd="133dp"
        android:text="Liczba kalori do spożycia:"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/caloriesToBeEaten"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="253dp"
        android:layout_marginTop="447dp"
        android:layout_marginEnd="48dp"
        android:textColor="#000000"></TextView>

    <TextView
        android:id="@+id/caloriesConsumed"
        android:layout_width="106dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="239dp"
        android:layout_marginTop="414dp"
        android:layout_marginEnd="66dp"
        android:textColor="#000000"></TextView>

    <TextView
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="79dp"
        android:layout_marginEnd="207dp"
        android:text="Nazwa produktu:"
        android:textColor="#000000"></TextView>

    <TextView
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="82dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="206dp"
        android:text="Liczba kalori:"
        android:textColor="#000000"></TextView>

    <EditText
        android:id="@+id/productName"
        android:layout_width="88dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="136dp"
        android:textColor="#000000"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/numberOfCalories"
        android:layout_width="87dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="101dp"
        android:layout_marginEnd="153dp"
        android:inputType="numberDecimal"
        android:textColor="#000000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="57dp"
        android:layout_height="56dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="284dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="69dp"
        android:background="@drawable/background_buttomv2"
        android:onClick="addProducts"
        android:shadowColor="#515CA8"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="+"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/backMealsButton"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="491dp"
        android:layout_marginEnd="197dp"
        android:background="@drawable/background_buttomv2"
        android:onClick="fromMealsToMenu"
        android:shadowColor="#515CA8"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Wróć"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/reset"
        android:layout_width="124dp"
        android:layout_height="46dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="236dp"
        android:layout_marginTop="491dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/background_buttomv2"
        android:onClick="reset"
        android:shadowColor="#515CA8"
        android:shadowDx="2"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:text="Reset"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        tools:ignore="OnClick" />

</RelativeLayout>